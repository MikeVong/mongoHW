<!--Homepage-->
<div class="container">
    <div class="jumbotron">
        <div class="text-center">
            <h1> Victorville News Mongo Scraper</h1>
        </div>

    </div>
    <div>
        {{#if article}}
            {{#each article}}
            <div class="panel ">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel">
            <div class="panel-body">
            <h4>Please Hit Scrape Articles!</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>
